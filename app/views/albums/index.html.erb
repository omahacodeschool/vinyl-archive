<%= stylesheet_link_tag "/css/style-addAlbumJS", "/css/style", "/css/utility", "/css/style-fonts" %>
<%= render "form" %>

 <div class="header flex">
        <div class="headerWrapper flex">
            <div class="playerImage flex">
                <span class="icons icons--recordPlayer"></span>
            </div>
            <div class="siteName color-white">
                THE VINYL ARCHIVE
                <!-- Link to homepage -->
            </div>
            <div class="siteInfo color-white">
                by Hear Nebraska
                <!-- Link to Hear Nebraska website -->
            </div>
        </div>
        <div class="headerWrapper--album flex">
            <div class="addAlbum color-white" id="addAlbum">
                ADD AN ALBUM
                <!-- Javascript for add album form -->
            </div>
        </div>
    </div>

<h1>All Albums</h1>

<a href="/albums"> All </a>
<a href="/albums?sort=LP"> LP </a>
<a href="/albums?sort=EP"> EP </a>
<a href="/albums?sort=Single"> Single </a>

<table>

	<thead>
		<tr>
			<th>Title</th>
		</tr>
	</thead>

	<tbody>
		<% @albums.each do |album| %>
			<tr id="album_<%= album.id %>">
				<td><%= album.name %></td>
				<td><%= link_to "Details", album_path(album.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @albums %>